# Environment Variables for Hazard Scout App
# Copy this file to .env and fill in your actual values

# Mapbox Configuration (REQUIRED)
# Get your token at: https://account.mapbox.com/access-tokens/
VITE_MAPBOX_TOKEN=your_mapbox_token_here

# Google Maps Configuration (Optional)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# App Configuration
VITE_APP_NAME=Hazard Scout
VITE_APP_VERSION=1.0.0

# Development Settings
VITE_DEV_MODE=true
VITE_API_BASE_URL=http://localhost:3001

# VW Connect Settings
VITE_VW_BRAND_COLOR=#0070E1
VITE_VW_ACCENT_COLOR=#001E50

# V2V WebSocket Server (Optional - for production V2V networking)
# VITE_V2V_WEBSOCKET_URL=ws://your-server.com:8080/v2v
